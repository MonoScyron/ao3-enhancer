{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS",
        "preserveConstEnums": true,
        "outDir": "./build",
        "typeRoots": [
            "node_modules/@types/"
        ],
        "lib": [
            "dom"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "build",
        ".vscode"
    ],
    "typeAcquisition": {
        "include": [
            "firefox-webext-browser"
        ]
    }
}