{
    "manifest_version": 2,
    "name": "AO3 Enhancer",
    "version": "0.0.1",
    "description": "Enhancment extension for AO3.",
    "author": "MonoScyron",
    "icons": {
        "48": "/src/icons/logo-48.png",
        "96": "/src/icons/logo-96.png"
    },
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "https://archiveofourown.org/*"
    ],
    "browser_action": {
        "default_icon": "/src/icons/logo-32.png",
        "default_title": "AO3 Enhancer"
    },
    "options_ui": {
        "page": "dist/options/options.html",
        "open_in_tab": true
    },
    "background": {
        "scripts": [
            "dist/background/bg_bundle.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://archiveofourown.org/*"
            ],
            "js": [
                "dist/content_scripts/cs_bundle.js"
            ],
            "css": [
                "/src/css/extension.css"
            ]
        }
    ]
}